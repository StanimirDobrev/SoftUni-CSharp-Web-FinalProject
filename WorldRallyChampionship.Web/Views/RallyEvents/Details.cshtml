@model WorldRallyChampionship.Web.ViewModels.RallyEvent.RallyEventDetailsViewModel
@{
	ViewData["Title"] = Model.Name;
}

<div class="container my-4">
	<div class="row g-4">
		<div class="col-12 col-lg-7">
			<div class="card shadow-sm">
				@if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
				{
					<img src="@Model.ImageUrl"
						 alt="@Model.Name"
						 class="card-img-top"
						 style="object-fit: cover; height: 360px;" />
				}
				else
				{
					<div class="d-flex align-items-center justify-content-center bg-light"
						 style="height: 360px;">
						<span class="text-muted">No image</span>
					</div>
				}
				<div class="card-body">
					<h3 class="card-title mb-3">@Model.Name</h3>

					<div class="mb-3">
						<span class="badge bg-primary me-2">@Model.Surface</span>
						<span class="badge bg-secondary">@Model.Country</span>
					</div>

					<div class="mb-3">
						<i class="bi bi-calendar-event me-2"></i>
						<strong>Dates:</strong>
						@Model.StartDate.ToString("dd MMM yyyy") – @Model.EndDate.ToString("dd MMM yyyy")
					</div>

					@if (!string.IsNullOrWhiteSpace(Model.Description))
					{
						<p class="card-text" style="white-space:pre-line">@Model.Description</p>
					}
					else
					{
						<p class="text-muted fst-italic">No description provided.</p>
					}

					<div class="mt-4 d-flex gap-2">
						<a asp-action="Index" class="btn btn-outline-secondary">
							← Back to Calendar
						</a>

						@* опционално: бутони за админ (по-късно, след авторизация) *@
						@* <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
						<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a> *@
					</div>
				</div>
			</div>
		</div>

		@* Дясна колона – място за бъдещи секции: резултати, карта, линкове *@
		<div class="col-12 col-lg-5">
			<div class="card shadow-sm mb-3">
				<div class="card-body">
					<h5 class="card-title mb-3">Event Info</h5>
					<ul class="list-unstyled mb-0">
						<li><strong>Country:</strong> @Model.Country</li>
						<li><strong>Surface:</strong> @Model.Surface</li>
						<li><strong>Starts:</strong> @Model.StartDate.ToString("dddd, dd MMM yyyy")</li>
						<li><strong>Ends:</strong> @Model.EndDate.ToString("dddd, dd MMM yyyy")</li>
					</ul>
				</div>
			</div>

			@* Ако добавиш класиране / етапни резултати, може да ги покажем тук *@
			@* <div class="card shadow-sm">
			<div class="card-body">
			<h5 class="card-title mb-3">Top Results</h5>
			...
			</div>
			</div> *@
		</div>
	</div>
</div>
