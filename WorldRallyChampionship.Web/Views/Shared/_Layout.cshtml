@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>@ViewData["Title"] - WorldRallyChampionship</title>

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/WorldRallyChampionship.Web.styles.css" asp-append-version="true" />

	@RenderSection("Head", required: false)
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
			<div class="container">
				<a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">WorldRallyChampionship</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
						aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="mainNav">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link" asp-controller="Crews" asp-action="Index">Crews</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Driver" asp-action="Index">Drivers</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Teams" asp-action="Index">Teams</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="News" asp-action="Index">News</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Standings" asp-action="Index">Standings</a>
						</li>
					</ul>

					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>

	<main class="container py-4">
		@RenderBody()
	</main>

	<footer class="border-top py-3 mt-auto">
		<div class="container text-muted small">
			© @DateTime.UtcNow.Year - WorldRallyChampionship
			- <a asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
