@model WorldRallyChampionship.Web.ViewModels.Driver.DriverFormModel

<h2>Create Driver</h2>
<form asp-action="Create" method="post">
	<div class="mb-3">
		<label asp-for="FirstName"></label>
		<input asp-for="FirstName" class="form-control" />
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="LastName"></label>
		<input asp-for="LastName" class="form-control" />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Nationality"></label>
		<input asp-for="Nationality" class="form-control" />
		<span asp-validation-for="Nationality" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="DateOfBirth"></label>
		<input asp-for="DateOfBirth" type="date" class="form-control" />
		<span asp-validation-for="DateOfBirth" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<select asp-for="TeamId"
				asp-items="@(ViewBag.Teams as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>())"
				class="form-select"></select>
		<span asp-validation-for="TeamId" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="ImageUrl">Image URL</label>
		<input asp-for="ImageUrl" class="form-control" placeholder="/img/drivers/kalle-rovampera.jpg" />
		<span asp-validation-for="ImageUrl" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
