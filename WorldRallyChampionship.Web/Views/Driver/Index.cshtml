@model IEnumerable<WorldRallyChampionship.Web.ViewModels.Driver.DriverViewModel>
@{
	ViewData["Title"] = "Drivers";
	bool isAdmin = User.IsInRole("Administrator");
	string Img(string? u) => Url.Content("~/" + (string.IsNullOrWhiteSpace(u) ? "img/placeholder.jpg" : u.TrimStart('/')));
}
<h2 class="mb-3">WRC Drivers</h2>

@if (isAdmin)
{
	<a asp-action="Create" class="btn btn-primary btn-sm mb-3">
		<i class="bi bi-plus-circle me-1"></i>Create Driver
	</a>
}

@if (Model == null || !Model.Any())
{
	<div class="alert alert-info">No drivers yet.</div>
}
else
{
	<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
		@foreach (var d in Model)
		{
			<div class="col">
				<div class="card h-100 shadow-sm">
					<img src="@Img(d.ImageUrl)" alt="@d.FullName" class="card-img-top object-cover" style="height:220px;">
					<div class="card-body">
						<h5 class="card-title mb-1">@d.FullName</h5>
						<div class="text-muted small mb-2">@d.Nationality • @d.TeamName</div>
						<a asp-action="Details" asp-route-id="@d.Id" class="btn btn-outline-primary btn-sm">Details</a>
						@if (isAdmin)
						{
							<a asp-action="Edit" asp-route-id="@d.Id" class="btn btn-warning btn-sm ms-1">Edit</a>
							<form asp-action="Delete" asp-route-id="@d.Id" method="post" class="d-inline">
								<button class="btn btn-danger btn-sm ms-1" onclick="return confirm('Delete this driver?')">Delete</button>
							</form>
						}
					</div>
				</div>
			</div>
		}
	</div>
}
