@model WorldRallyChampionship.Web.ViewModels.Driver.DriverFormModel
@{
	ViewData["Title"] = "Edit Driver";
	var teams = ViewBag.Teams as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}
<h2 class="mb-3">Edit Driver</h2>

<div class="card shadow-sm">
	<div class="card-body">
		<form asp-action="Edit" method="post">
			@Html.AntiForgeryToken()
			<input type="hidden" asp-for="Id" />
			<div class="row g-3">
				<div class="col-md-6">
					<label asp-for="FirstName" class="form-label"></label>
					<input asp-for="FirstName" class="form-control" />
					<span asp-validation-for="FirstName" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="LastName" class="form-label"></label>
					<input asp-for="LastName" class="form-control" />
					<span asp-validation-for="LastName" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="Nationality" class="form-label"></label>
					<input asp-for="Nationality" class="form-control" />
					<span asp-validation-for="Nationality" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="DateOfBirth" class="form-label"></label>
					<input asp-for="DateOfBirth" type="date" class="form-control" />
					<span asp-validation-for="DateOfBirth" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="TeamId" class="form-label">Team</label>
					<select asp-for="TeamId" asp-items="teams" class="form-select"></select>
					<span asp-validation-for="TeamId" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<label asp-for="ImageUrl" class="form-label"></label>
					<input asp-for="ImageUrl" class="form-control" placeholder="/img/drivers/xxx.jpg" />
					<span asp-validation-for="ImageUrl" class="text-danger"></span>
				</div>
			</div>

			<div class="mt-3">
				<button class="btn btn-primary">Save</button>
				<a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary ms-1">Cancel</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
